<fieldset id="Resultpanel">
<legend><b>Select User</b></legend>
		<form method="POST" action="/admin/api/result" > 
            <label for="Sluname">User Name *</label>
			<br>
            <select id="Sluname" name="uid" required>
                <option value="">Please select a user</option>
            {{#each user}}
                <option value="{{uid}}">{{uname}}</option>
            {{/each}}	
            </select>
			<br>
			<select id="Weekday" name="weekofday" required>
				<option value="">Please select a weekday</option>
				<option value="1">Sunday</option>
				<option value="2">Monday</option>
				<option value="3">Tuesday</option>
				<option value="4">Wednesday</option>
				<option value="5">Thursday</option>
				<option value="6">Friday</option>
				<option value="7">Saturday</option>
            </select>
			<br>
			<select id="lname" name="lid" required>
                <option value="">Please select a location</option>
            {{#each loc}}
                <option value="{{lid}}">{{lname}}</option>
            {{/each}}
            </select>
            <input type="submit" value="Submit" />
			<div id = "Graph"></div>
		</form>
</fieldset>

