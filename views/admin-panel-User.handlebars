<fieldset id="userNewpanel">
        <legend><b>Add New User</b></legend>
        <form method="POST" action="/admin/api/user/add">
            <label for="Newutype">User Type *</label><br>
            <select id="Newutype" name="pref" required>
                <option value="">Please select a user type</option>
            {{#each type}}
                <option value="{{pref}}">{{typename}}</option>
            {{/each}}
            </select>
            <br>
            <label for="Newuname">User Name *</label>
            <div>
                <input id="Newuname" type="text" name="uname" required pattern="^[\w- ']+$" />
            </div>

            <!--new add-->
            <label for="Newuname">User ID *</label>
			<div>
                <input id="Newuname" type="text" name="sid" required pattern="^[\w- ']+$" />
            </div>
            <label for="Newuname">Test Score * </label>
            <div>
                <input id="UTestscore" type="text" name="utscore" required pattern="^[\w- ']+$" />
            </div>
            <label for="Newuname">Description *</label>
            <div>
                <input id="UDesc" type="text" name="udesc" required pattern="^[\w- ']+$" />
            </div>
            <!--new add-->

            <input type="submit" value="Submit" />
        </form>
</fieldset>

