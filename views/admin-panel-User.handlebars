<fieldset id="userEditpanel">
        <legend><b>Edit User</b></legend>
        <form method="POST" action="/admin/api/user/edit/update" > 
            
			<label for="uEditname">User Name *</label><br>
            <select id="uEditname" name="uid" required>
                <option value="">Please select a user</option>
            {{#each user}}
                <option value="{{uid}}">{{uname}}</option>
            {{/each}}
            </select>
			<br>
			
			<label for="uEdittscore">Test Score * </label>
            <div>
                <input id="uEdittscore" type="text" name="utscore" required pattern="^[\w- ']+$" />
            </div>
			
			<label for="uEditdesc">Description *</label>
            <div><textarea id="uEditdesc" name="udesc" pattern="^[\w- ',.!\r\n]+$"></textarea></div>

            <br>
            <input type="submit" value="Submit" />
			
        </form>
</fieldset>

